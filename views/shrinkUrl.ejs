<%- include('./partials/header') %>

<div style="margin-top: 5%;" class="container">
    <h1>Url Shrinker</h1>
    <form action="/shrinkUrls" method="POST" class="my-4 form-inline">
        <label for="fullUrl" class="sr-only">Url</label>
        <input required placeholder="Url" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2">
        <button class="btn btn-success" type="submit">Shrink</button>
    </form>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Full Url</th>
                <th>Short Url</th>
                <th>Clicks</th>
            </tr>    
        </thead>
        <tbody>
            <% shrinkUrls.forEach(shrinkUrl => { %> 
            <tr>
                <td><a href="<%= shrinkUrl.full %>"><%= shrinkUrl.full %></a></td>
                <td><a href="<%= shrinkUrl.short %>"><%= shrinkUrl.short %></a></td>
                <td><%= shrinkUrl.clicks %></td>
            </tr>
            <% }); %> 
        </tbody>
    </table>
</div>    

<%- include('./partials/footer') %>
